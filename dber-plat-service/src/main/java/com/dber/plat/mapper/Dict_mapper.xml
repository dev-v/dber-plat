<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dber.plat.mapper.IDictMapper">

	<select id="get" resultType="Dict">
		select * from dict where id=#{id}
	</select>

	<delete id="del">
		delete from dict where id = #{id}
	</delete>

	<select id="gets" resultType="Dict">
		SELECT * FROM dict WHERE id IN
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")"> #{item}
		</foreach>
	</select>

	<sql id="maxLimit">
		limit 1000
	</sql>

	<delete id="dels">
		delete from dict where id in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")"> #{item}
		</foreach>
		<include refid="maxLimit"></include>
	</delete>

	<sql id="insertList">
		(
		<trim suffixOverrides=",">
			<if test="categoryId!=null">
				category_id=#{categoryId},
			</if>
			<if test="enumName!=null">
				enum_name=#{enumName},
			</if>
			<if test="value!=null">
				value=#{value},
			</if>
			<if test="label!=null">
				label=#{label},
			</if>
			<if test="content!=null">
				content=#{content},
			</if>
		</trim>
		) values (
		<trim suffixOverrides=",">
			<if test="categoryId!=null">
				#{categoryId},
			</if>
			<if test="enumName!=null">
				#{enumName},
			</if>
			<if test="value!=null">
				#{value},
			</if>
			<if test="label!=null">
				#{label},
			</if>
			<if test="content!=null">
				#{content},
			</if>
		</trim>

		)
	</sql>

	<!-- 注意检查非空和主键自增属性 -->
	<insert id="insert" keyProperty="id" useGeneratedKeys="true">
		insert
		into dict
		<include refid="insertList"></include>
	</insert>

	<update id="update">
		update dict
		<set>
						<if test="categoryId != null ">
				category_id=#{categoryId},
			</if>
			<if test="enumName != null ">
				enum_name=#{enumName},
			</if>
			<if test="value != null ">
				value=#{value},
			</if>
			<if test="label != null ">
				label=#{label},
			</if>
			<if test="content != null ">
				content=#{content},
			</if>

		</set>
		where id = #{id}
	</update>

	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		<!-- 不包含数据库类型为TIMESTAMP（由数据库自动管理）的列 -->
		insert into dict
		<include refid="insertList"></include>
		ON DUPLICATE KEY
		UPDATE
		<trim suffixOverrides=",">
						<if test="categoryId != null ">
				category_id=values(category_id),
			</if>
			<if test="enumName != null ">
				enum_name=values(enum_name),
			</if>
			<if test="value != null ">
				value=values(value),
			</if>
			<if test="label != null ">
				label=values(label),
			</if>
			<if test="content != null ">
				content=values(content),
			</if>

		</trim>
	</insert>

	<sql id="queryList">
		select id,category_id,enum_name,value,label,create_time,modify_time from
		dict
	</sql>

	<sql id="where">
		<trim prefix="WHERE" prefixOverrides="AND">
						<if test="id != null">
				AND id=#{id}
			</if>
			<if test="categoryId != null">
				AND category_id=#{categoryId}
			</if>
			<if test="enumName != null">
				AND enum_name=#{enumName}
			</if>
			<if test="value != null">
				AND value=#{value}
			</if>
			<if test="label != null">
				AND label=#{label}
			</if>
			<if test="content != null">
				AND content=#{content}
			</if>
			<if test="createTime != null">
				AND create_time=#{createTime}
			</if>
			<if test="modifyTime != null">
				AND modify_time=#{modifyTime}
			</if>

		</trim>
	</sql>

	<select id="query" resultType="Dict">
		<include refid="queryList"></include>
		<include refid="where"></include>
	</select>

	<select id="queryWithoutPage" resultType="Dict">
		<include refid="queryList"></include>
		<include refid="where"></include>
		<include refid="maxLimit"></include>
	</select>

	<select id="getIds" resultType="long">
		select id from dict
		<include refid="where"></include>
		<include refid="maxLimit"></include>
	</select>

</mapper>
